
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_DefaultHeadComponentPartial")

<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-4">
                <!-- Kategoriler -->
               
                    @await Component.InvokeAsync("_DefaultCategoryListComponentPartial")

                <!-- Sosyal Medya -->
                @await Component.InvokeAsync("_DefaultSocialMediaComponentPartial")

                <!-- Öne Çıkan Bloglar -->
                <div class="mb-4">
                    <h5 class="border-bottom pb-2">Öne Çıkan Bloglar</h5>
                    <ul class="list-group">
                        <li class="list-group-item">En İyi Yazılım Araçları</li>
                        <li class="list-group-item">Minimal Tasarım Rehberi</li>
                        <li class="list-group-item">2024 Seyahat Trendleri</li>
                    </ul>
                </div>

                <!-- Yazarlar -->
                <div>
                    <h5 class="border-bottom pb-2">Yazarlar</h5>
                    <ul class="list-group">
                        <li class="list-group-item">Ahmet Yılmaz</li>
                        <li class="list-group-item">Elif Kara</li>
                        <li class="list-group-item">Mehmet Öz</li>
                    </ul>
                </div>
            </div>

            <!-- Blog Listesi -->
            @await Component.InvokeAsync("_DefaultArticleListComponentPartial")
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>