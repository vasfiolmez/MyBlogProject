@model List<Category>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">

    <br />
    <br />

    <table class="table table-hover">
        <tr>
            <td>#</td>
            <td>Kategori Adı</td>
            <td>Sil</td>
            <td>Güncelle</td>
            <td>Bloglar</td>
        </tr>
          @foreach(var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td> <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">sil</a></td>
                <td> <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">güncelle</a></td>
                <td> <a href="" class="btn btn-warning">bloglar</a></td>
               
            </tr>
        }
    </table>
    <a href="/Category/CreateCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>
</div>